{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "server.ts",
    "ollama-simple.ts",
    "test-ollama.ts",
    "ollama-simplified.ts",
    "insurance-jargon-glossary.ts",
    "test-simplified.ts",
    "insurance-glossary-sa.ts",
    "documents-sa.ts",
    "sa-medical-aid.ts"
  ],
  "exclude": ["node_modules", "build"]
}
